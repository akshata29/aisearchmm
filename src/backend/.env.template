# Azure OpenAI Configuration
# Replace with your Azure OpenAI endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-openai-endpoint.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here

# Replace with your GPT model name (e.g., gpt-4o, gpt-4, gpt-35-turbo)
AZURE_OPENAI_MODEL_NAME=gpt-4o

# Replace with your Azure OpenAI deployment name
AZURE_OPENAI_DEPLOYMENT=chat4o
# Azure OpenAI Embedding Configuration (alternative to Azure AI Inference)
# If you're using Azure OpenAI for embeddings instead of Azure AI Inference
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=embedding

# Azure AI Search Configuration
# Replace with your Azure AI Search service endpoint
SEARCH_SERVICE_ENDPOINT=https://your-search-endpoint.search.windows.net
SEARCH_API_KEY=your-api-key-here

# Replace with your search index name
SEARCH_INDEX_NAME=aimm

# Knowledge Agent Configuration
# Replace with your knowledge agent name
KNOWLEDGE_AGENT_NAME=aimmka

# Azure Storage Configuration
# Replace with your storage account URL
ARTIFACTS_STORAGE_ACCOUNT_URL=https://astdnapubstor.blob.core.windows.net
ARTIFACTS_STORAGE_ACCOUNT_KEY=your-key-here
# Replace with your artifacts container name
ARTIFACTS_STORAGE_CONTAINER=mmdata

# Replace with your samples container name
SAMPLES_STORAGE_CONTAINER=mmdatasample

# Document Intelligence Configuration
DOCUMENTINTELLIGENCE_ENDPOINT=https://your-document-intelligence-endpoint.cognitiveservices.azure.com/
DOCUMENTINTELLIGENCE_KEY=your-document-intelligence-key-here

# Azure AI Inference (Embedding) Configuration
AZURE_INFERENCE_EMBED_ENDPOINT=https://your-embedding-endpoint.services.ai.azure.com/models
AZURE_INFERENCE_API_KEY=your-embedding-api-key-here
# Replace with your embedding model name (commonly text-embedding-3-large or text-embedding-ada-002)
AZURE_INFERENCE_EMBED_MODEL_NAME=embeddings


# Azure Service Principal (SPN) Authentication - REQUIRED
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here

# Optional: Local development settings
HOST=localhost
PORT=5000

# Production Configuration Settings
# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_REQUEST_LOGGING=true

# Performance Configuration
MAX_CONCURRENT_UPLOADS=10
UPLOAD_TIMEOUT_SECONDS=300
SEARCH_TIMEOUT_SECONDS=30
REQUEST_TIMEOUT_SECONDS=60
MAX_FILE_SIZE_MB=100

# Security Settings
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
SAS_TOKEN_DURATION_MINUTES=60
ENABLE_REQUEST_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# Monitoring and Health Checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_TIMEOUT_SECONDS=30
STATUS_RETENTION_HOURS=24

# Resilience Configuration
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
RETRY_MAX_ATTEMPTS=3

# Environment Configuration
ENVIRONMENT=development
DEBUG_MODE=false
