{
  "name": "teams-rag-app",
  "version": "1.0.0",
  "description": "Microsoft Teams AI bot, message extension, and personal tab for multimodal RAG backend integration.",
  "private": true,
  "scripts": {
    "clean": "rimraf dist .turbo cache .parcel-cache",
    "build": "tsc -p tsconfig.json",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:devtools": "cross-env NODE_ENV=development tsx watch src/index.ts --devtools",
    "lint": "eslint .",
    "format": "prettier --write .",
    "start": "node dist/index.js",
    "package": "tsx scripts/package.ts",
    "tab:dev": "cross-env NODE_ENV=development vite --config tab/vite.config.ts --host 0.0.0.0 --port 5300",
    "tab:build": "cross-env NODE_ENV=production vite build --config tab/vite.config.ts",
    "tab:preview": "vite preview --config tab/vite.config.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run tab:dev\"",
    "dev:teamsfx": "npx cross-env NODE_OPTIONS='--inspect=9239' npx env-cmd -f .env npm run dev",
    "dev:teamsfx:testtool": "npx cross-env NODE_OPTIONS='--inspect=9239' npx env-cmd -f env/.env.testtool npm run dev",
    "dev:teamsfx:launch-testtool": "npx env-cmd --silent -f env/.env.testtool npx @microsoft/m365agentsplayground start --app-endpoint http://localhost:3978/api/messages --channel-id msteams"
  },
  "dependencies": {
    "@microsoft/teams-js": "^2.21.0",
    "@microsoft/teams.ai": "^2.0.1",
    "@microsoft/teams.api": "^2.0.1",
    "@microsoft/teams.apps": "^2.0.1",
    "@microsoft/teams.common": "^2.0.1",
    "@microsoft/teams.dev": "^2.0.1",
    "@fluentui/react-components": "^9.51.1",
    "@fluentui/react-icons": "^2.0.312",
    "@microsoft/fetch-event-source": "^2.0.1",
    "adaptivecards": "^3.0.0",
    "adaptivecards-templating": "^2.3.1",
    "adm-zip": "^0.5.12",
    "axios": "^1.7.7",
    "clsx": "^2.1.1",
  "dompurify": "^3.1.7",
  "framer-motion": "^11.0.8",
  "marked": "^12.0.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eventsource-parser": "^1.1.0",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/cors": "^2.8.17",
  "@types/express": "^4.17.21",
  "@types/dompurify": "^3.0.5",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
  "@vitejs/plugin-basic-ssl": "^1.1.0",
  "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "env-cmd": "latest",
    "vite": "^5.4.6"
  },
  "engines": {
    "node": ">=18.20"
  }
}
