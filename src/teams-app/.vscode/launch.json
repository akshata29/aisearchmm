{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Bot (ts-node)",
      "restart": true,
      "port": 9229,
      "timeout": 30000,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Tab",
      "url": "http://localhost:5300",
      "webRoot": "${workspaceFolder}/src/tab/web/src",
      "runtimeArgs": ["--remote-allow-origins=*"]
    }
  ]
}
