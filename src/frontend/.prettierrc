{
    "tabWidth": 4,
    "printWidth": 120,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "endOfLine": "lf",
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^react",
        "^@?\\w",
        "^@/types",
        "^@/constants",
        "^@/utils",
        "^@/hooks",
        "^@/contexts",
        "^@/api",
        "^@/components",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}